<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.example.android.vigilant.WelcomeActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Welcome to Vigilant"
        android:textColor="@color/purple"
        android:textSize="45sp"
        tools:layout_editor_absoluteY="165dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swirlimage"/>

    <ImageView
        android:id="@+id/swirlimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/purpleswirl"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_continue"
        android:layout_width="133dp"
        android:layout_height="93dp"
        android:background="@android:color/holo_purple"
        android:fontFamily="cursive"
        android:text="Continue"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button_learnmore"
        tools:layout_editor_absoluteY="271dp"
        tools:layout_editor_absoluteX="126dp" />

    <ImageButton
        android:id="@+id/button_learnmore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/learnmorevigilant"
        tools:layout_editor_absoluteY="407dp"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>
